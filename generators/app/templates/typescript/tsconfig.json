{
  "compilerOptions": {
    "experimentalDecorators": true,
    "module": "commonjs",
    "target": "es6",
    "lib": ["es6", "esnext", "es2015", "dom"],
    "suppressImplicitAnyIndexErrors": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "noUnusedLocals": true,
    "sourceMap": true,
    "declaration": true,
    "outDir": "./dist",
    "rootDir": "src",
    "baseUrl": ".",
    "esModuleInterop": true,
    "types": ["node", "jest"],
    "paths": {
      "@modules/*": ["./modules/*"]
    }
  },
  "include": ["src/**/*.ts"],
  "files": ["src/server.ts"],
  "exclude": ["node_modules"]
}
